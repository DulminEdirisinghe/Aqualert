void loop() {
  
    if(digitalRead(avgUpPin) == LOW){
      if (avg < maxW){
        avg+=200; // increase avg water by 10;
        Screen(String(avg)+"ml");
        EEPROM.write(0, avg); // update avg in memory -- may cause eeprom degrade   maybe send the code to setup 
        delay(1000);
        }
      else{
        Screen("Max");
        delay(1000);
        }
      return;
    }
    if(digitalRead(avgDownPin) == LOW){
      if (avg > minW){
        avg-=200; // increase avg water by 10;
        EEPROM.write(0, avg); // update avg in memory -- may cause eeprom degrade
        Screen(String(avg)+"ml");
        delay(1000);
        }
      else{
        Screen("Min");
        delay(1000);
        }
      return; // go to beginning void loop
    }

    Current_weight = scale.get_units(10);
    
    
    // checking every  between 29and 31 mins
    //Serial.println(minutes()%1);
    if (minutes()%30 ==0 and average(totalIntake)<=avg){    
      blink(Current_weight);
    }
    if (minutes()% 37==0 and average(totalIntake)<=avg){    
      flag = 1; //reset blink flag for next cycle
    }
    if (digitalRead(LightPin) == LOW){             //turn on the light back on only if lamp button on
          digitalWrite(LED,1);
    }
    else{
      digitalWrite(LED,0);
    }
    if (Current_weight < peakNow and abs(Current_weight - peakNow)>50){
      peakOld=peakNow;
      peakNow=Current_weight;
      totalIntake += (peakOld - peakNow);
      }
    if (Current_weight > peakNow and abs(Current_weight - peakNow)>50){
        totalIntake = avg*minutes();
        peakNow=Current_weight;
        peakOld=Current_weight;
        
      }
    //Screen(String(average(totalIntake)));

    if (average(totalIntake)<avg)
    {
        
        Screen("Drink");
        display.clearDisplay();
        display.drawBitmap(0, 0,  waterDrop, 128, 32, 1);
        display.display();
        display.clearDisplay();
  
      }
    else{
        
        display.drawBitmap(0, 0,  face, 128, 32, 1);
        display.display();
        display.clearDisplay();
        }
      
