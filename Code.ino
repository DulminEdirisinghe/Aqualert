void blink(float Current_weight){

  while (Current_weight-50 < scale.get_units() and digitalRead(blinkOffPin) == HIGH and flag == 1){   // we reduce 50 so that user should at least drink 20000 worth of water to off the alarm.Or else user can press the push button and gnd the pin

      digitalWrite(LED,1);
      Screen("Drink"); 
      digitalWrite(LED,0);   
      Screen("WATER");
                  //led warning off with light off
      
  }
  if(digitalRead(blinkOffPin) == LOW){
        flag =0; // user press and hold blink off button, prevent restarting blink
        delay(500);
      }


}

